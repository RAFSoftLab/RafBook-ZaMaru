    <TableColumn fx:id="firstNameColumn" text="Ime"/>
    <TableColumn fx:id="lastNameColumn" text="Prezime"/>
    <TableColumn fx:id="usernameColumn" text="Username"/>
    <TableColumn fx:id="emailColumn" text="Email"/>
